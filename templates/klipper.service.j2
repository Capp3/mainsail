[Unit]
Description=Klipper 3D Printer Firmware SV1
Documentation=https://www.klipper3d.org/
After=network-online.target
Before=moonraker.service
Wants=udev.target

[Install]
Alias=klippy
WantedBy=multi-user.target

[Service]
Type=simple
User={{ klipper_user }}
RemainAfterExit=yes
WorkingDirectory=/home/{{ klipper_user }}/klipper
EnvironmentFile=/home/{{ klipper_user }}/printer_data/systemd/klipper.env
ExecStart=/home/{{ klipper_user }}/klippy-env/bin/python $KLIPPER_ARGS
Restart=always
RestartSec=10